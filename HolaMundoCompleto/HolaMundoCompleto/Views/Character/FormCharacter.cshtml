<div class="container">
	@{
		ViewBag.Title = "View Character";
	}

	<h2>New Character Form</h2>

	<div class="row">
		<div class="col-xs-6">
			<div class="panel panel-primary">
				<div class="panel-heading">
					<h3 class="panel-title">new Character Form</h3>
				</div>
				<div class="panel-body" align="center">

					<form method="post" action="/Character/CreateCharacter">

						<table class="table-striped">
							<tr>
								<td><label>Character Name: </label></td>
								<td>
									<input type="text" class="form-control" name="txtName" 
										   placeholder="new Character name" required><br />
								</td>
							</tr>

							<tr>
								<td><label>Character Heigth(Meters):  </label></td>
								<td>
									<input type="text" class="form-control" name="txtHeigth" 
										   placeholder="new Character heigth" value="1.60" required><br />
								</td>
							</tr>

							<tr>
								<td><label>Type: </label></td>
								<td>
									<input type="radio" name="opcion1" value="Angel" />Angel
									<br />
									<input type="radio" name="opcion1" value="Devil" />Devil

								</td>
							</tr>

						</table><br /><br />
						<input type="submit" name="submit" value="Guardar" class="btn btn-info" />
					</form>


				</div>
			</div>
		</div>
	</div>
</div>

